LOCAL_SRC_FILES := jwrapper.c zixi_context.cpp

LIBS_TO_LINK := $(ZIXI_INTERNAL_MODULES)
LOCAL_STATIC_LIBRARIES := $(LIBS_TO_LINK)

#android libs
LOCAL_LDLIBS := -ldl -llog

