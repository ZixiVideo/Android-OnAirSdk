LOCAL_PATH := $(call my-dir)

include $(CLEAR_VARS)

LOCAL_MODULE := jwrapper_exo

APP_CPPFLAGS := -D_GLIBCXX__PTHREADS
APP_CPPFLAGS += -DBOOST_ASIO_DISABLE_EPOLL -DBOOST_THREAD_USE_LIB -DZIXI_WORKER_THREAD_USE_BOOST
APP_CPPFLAGS += -mthumb -msoft-float
APP_CPPFLAGS += -DANDROID -D__ANDROID__ -D__arm__ -D_REENTRANT
